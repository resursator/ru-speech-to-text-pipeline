FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    faster-whisper \
    fastapi \
    "uvicorn[standard]" \
    python-multipart

COPY asr/service_cpu.py ./asr/

CMD ["uvicorn", "asr.service_cpu:app", "--host", "0.0.0.0", "--port", "8001"]
EXPOSE 8001
